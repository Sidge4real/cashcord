<%- include('header') %>

<main id="account">
  <section class="form-container sign-in-container">
    <form action="#">
      <h1>Cashcord - Registration Form</h1>
      <br />

      <label for="first-name"><b>Voornaam</b></label>
      <input
        type="text"
        id="first-name"
        name="first-name"
        placeholder="Voornaam"
        size="15"
        required
      />

      <label for="last-name"><b>Achternaam</b></label>
      <input
        type="text"
        id="last-name"
        name="last-name"
        placeholder="Achternaam"
        size="15"
        required
      />

      <label for="phone"><b>Telefoonnummer</b></label>
      <input type="tel" id="phone" name="phone" placeholder="Country Code" value="+32" size="2" />

      <label for="email"><b>Email</b></label>
      <input type="email" id="email" name="email" placeholder="E-mail invullen" required />

      <label for="psw"><b>Wachtwoord</b></label>
      <input type="password" id="psw" name="psw" placeholder="Wachtwoord invullen" required />

      <label for="psw-repeat"><b>Wachtwoord opnieuw typen</b></label>
      <input
        type="password"
        id="psw-repeat"
        name="psw-repeat"
        placeholder="Wachtwoord opnieuw typen"
        required
      />

      <button type="submit" class="registerbtn">Register</button>
      <h5>Already have an account? <a href="login">Log In</a></h5>
    </form>
  </section>
  <section class="overlay-container">
    <section class="overlay">
      <section class="overlay-panel overlay-right">
        <p><img src="./images/cc-logo-lg.png" height="200" width="auto" alt="" /></p>
      </section>
    </section>
  </section>
</main>

<%- include('footer') %>
