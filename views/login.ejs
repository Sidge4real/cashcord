<%- include('header'); %>
<main class="login">
  <form>
    <h2>Inloggen</h2>
    <fieldset>
      <div>
        <input
          type="email"
          name="email"
          pattern="^[a-zA-Z0-9.]+@[a-zA-Z]+\.[a-zA-Z]{2,3}$"
          required
        />
        <label>Mail adress</label>
      </div>
      <div>
        <input type="password" name="password" required />
        <label>Password</label>
      </div>
      <input type="submit" value="login" />
      <a class="change" href="./signup">Create an acount</a>
    </fieldset>
  </form>
</main>
<%- include('footer'); %>
